<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="3dp"
        android:left="4dp"
        android:right="4dp"
        android:top="3dp">
        <shape android:shape="rectangle" >

            <corners
                android:radius="40dp" />
            <gradient
                android:centerColor="#FF5091"
                android:endColor="#F85E69"
                android:gradientRadius="360"
                android:startColor="#298ADF"
                android:type="sweep" />
            <size
                android:width="82dp"
                android:height="82dp" />
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="5dp"
        android:right="5dp"
        android:top="10dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="40dp" />
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>